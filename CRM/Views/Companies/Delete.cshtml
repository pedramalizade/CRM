@model CRM.Models.Company

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <h4>شرکت</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NIP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NIP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BusinessId)
        </dt>
        <dd class="col-sm-10">
            @if (Model.BusinessId != null && ViewBag.data != null && ViewBag.data.ContainsKey(Convert.ToInt32(Model.BusinessId)))
            {
                <a asp-controller="Business" asp-action="Details" asp-route-id="@Model.BusinessId">
                    @Html.DisplayFor(model => model.BusinessId) @ViewBag.data[Convert.ToInt32(Model.BusinessId)]
                </a>
            }
            else
            {
                @Html.DisplayFor(model => model.BusinessId) <span>(داده‌ای موجود نیست)</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @if (Model.UserId != null && ViewBag.data2 != null && ViewBag.data2.ContainsKey(Convert.ToInt32(Model.UserId)))
            {
                if (Model.UserId != ViewBag.UserId)
                {
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId">
                        @Html.DisplayFor(model => model.UserId) @ViewBag.data2[Convert.ToInt32(Model.UserId)]
                    </a>
                }
                else
                {
                    <a asp-controller="Accounts" asp-action="Details">
                        @Html.DisplayFor(model => model.UserId) @ViewBag.data2[Convert.ToInt32(Model.UserId)]
                    </a>
                }
            }
            else
            {
                @Html.DisplayFor(model => model.UserId) <span>(داده‌ای موجود نیست)</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
    </form>
</div>