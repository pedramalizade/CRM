@model CRM.Models.Note

@{
    ViewData["Title"] = "Create";
}
<h1>ایجاد</h1>

<h4>یادداشت</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">محتوا</span>
                </div>
                <textarea asp-for="Content" class="form-control" aria-label="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control">
                    @foreach (var item in ViewBag.data)
                    {
                        @if (item.Name == ViewBag.name)
                        {
                            <option selected value="@Convert.ToUInt32(item.Id)">@item.Name</option>
                        }
                        else
                        {
                            <option value="@Convert.ToUInt32(item.Id)">@item.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="UserId" class="form-control" value="@ViewBag.user" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">بازگشت به فهرست یادداشت‌ها</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}