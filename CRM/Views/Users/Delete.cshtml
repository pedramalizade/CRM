@using CRM.Helpers
@model CRM.Models.User

@{ ViewData["Title"] = "Delete"; }

<h1>حذف کاربر</h1>

<h3>آیا مطمئن هستید که می‌خواهید این کاربر را حذف کنید؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt class="col-sm-2">
            تاریخ تولد
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToPersianDate()
        </dd>

        <dt class="col-sm-2">
            نام کاربری
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt class="col-sm-2">
            نقش
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Roles" asp-action="Details" asp-route-id="@Model.RoleId">
                @Html.DisplayFor(model => model.RoleId) - @ViewBag.roles[Convert.ToInt32(Model.RoleId) - 1]
            </a>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست کاربران</a>
    </form>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}